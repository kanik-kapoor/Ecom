<header class="absolute w-full top-0 z-10 bg-white hidden lg:z-1" id="search" style="background: none;">
  <nav aria-label="Top" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 lg:w-2/5 lg:flex lg:justify-end">
    <div class="border-b border-gray-200 w-full md:w-full sm:w-full lg:w-4/5">
      <div class="flex h-16 items-center">
        <div class="w-full">
          <label for="default-search"
            class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-4 h-4 text-gray-500 dark:text-gray-400 hidden lg:block md:block" aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
              </svg>
            </div>
            <input type="search" id="default-search"
              class="block w-full p-4 lg:pl-10 md:pl-10 text-sm text-gray-900 border-0 border-b-1 rounded-lg bg-gray-100"
              style="box-shadow: none;" placeholder="Search Mockups, Logos..."
              onkeypress="return searchKeyPress(event);" required>
            <button type="button" id="press"
              class="text-white absolute right-16 bottom-2.5 bg-indigo-600 hover:bg-indigo-700 font-medium rounded-lg text-sm px-4 py-2"
              onclick="search('default-search')">
              <svg class="w-4 h-4 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
              </svg>
            </button>
            <button type="button"
              class="text-white text-sm h-8 w-12 absolute right-2.5 bottom-2.5 bg-indigo-600 hover:bg-indigo-700 font-medium rounded-lg text-sm p-0 font-mono"
              onclick="closeButton('search')">
              <svg class="h-6 w-12" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>  
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>